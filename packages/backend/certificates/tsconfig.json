{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./dist",
    "lib": ["es6"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.spec.js"]
}
