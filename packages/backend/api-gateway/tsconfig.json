{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "pretty": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6"],
    // "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.spec.js"]
}
