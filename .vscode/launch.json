{
  "configurations": [
    {
      "type": "node-terminal",
      "name": "debug: datawarehouse-sync",
      "request": "launch",
      "command": "yarn workspace data-warehouse-sync  serve",
      "cwd": "${workspaceFolder}/"
    },
    {
      "type": "node-terminal",
      "name": "debug: api-gateway",
      "request": "launch",
      "command": "yarn workspace api-gateway serve",
      "cwd": "${workspaceFolder}/"
    },
    {
      "type": "node-terminal",
      "name": "debug: certificates",
      "request": "launch",
      "command": "yarn workspace certificates serve",
      "cwd": "${workspaceFolder}/"
    },
    {
      "type": "node-terminal",
      "name": "debug: frontend (terminal)",
      "request": "launch",
      "command": "yarn dev",
      "cwd": "${workspaceFolder}/packages/frontend/",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "chrome",
      "name": "debug: frontend (browser)",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/frontend/src",
      "preLaunchTask": "start-frontend"
    }
  ]
}
